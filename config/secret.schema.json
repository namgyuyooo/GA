{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "secret.schema.json",
  "title": "Secret Configuration Schema",
  "description": "UTM Analytics Dashboard 통합 시크릿 파일을 위한 JSON 스키마",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "스키마 파일 경로"
    },
    "name": {
      "type": "string",
      "description": "시크릿 파일 이름"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "버전 (semver 형식)"
    },
    "description": {
      "type": "string",
      "description": "시크릿 파일 설명"
    },
    "secrets": {
      "type": "object",
      "description": "민감한 정보 섹션",
      "properties": {
        "database": {
          "type": "object",
          "properties": {
            "NEXT_PUBLIC_SUPABASE_ANON_KEY": {
              "type": "string",
              "description": "Supabase 익명 키"
            }
          }
        },
        "google_service_account": {
          "type": "object",
          "description": "Google Service Account 정보",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["service_account"]
            },
            "project_id": {
              "type": "string",
              "description": "Google Cloud 프로젝트 ID"
            },
            "private_key_id": {
              "type": "string",
              "description": "Private Key ID"
            },
            "private_key": {
              "type": "string",
              "description": "Private Key (PEM 형식)"
            },
            "client_email": {
              "type": "string",
              "format": "email",
              "description": "Service Account 이메일"
            },
            "client_id": {
              "type": "string",
              "description": "Client ID"
            },
            "auth_uri": {
              "type": "string",
              "format": "uri",
              "description": "OAuth2 인증 URI"
            },
            "token_uri": {
              "type": "string",
              "format": "uri",
              "description": "토큰 URI"
            },
            "auth_provider_x509_cert_url": {
              "type": "string",
              "format": "uri",
              "description": "인증 공급자 인증서 URL"
            },
            "client_x509_cert_url": {
              "type": "string",
              "format": "uri",
              "description": "클라이언트 인증서 URL"
            },
            "universe_domain": {
              "type": "string",
              "description": "Universe Domain"
            }
          },
          "required": ["type", "project_id", "private_key", "client_email"]
        },
        "ai_apis": {
          "type": "object",
          "properties": {
            "GEMINI_API_KEY": {
              "type": "string",
              "pattern": "^AIzaSy",
              "description": "Gemini API 키"
            },
            "GEMINI_API_FREE_KEY": {
              "type": "string",
              "pattern": "^AIzaSy",
              "description": "Gemini 무료 API 키"
            }
          },
          "required": ["GEMINI_API_KEY"]
        },
        "authentication": {
          "type": "object",
          "properties": {
            "JWT_SECRET": {
              "type": "string",
              "minLength": 32,
              "description": "JWT 시크릿 키 (최소 32자)"
            },
            "SUPER_USER_PASSWORD": {
              "type": "string",
              "minLength": 8,
              "description": "관리자 비밀번호 (최소 8자)"
            }
          },
          "required": ["JWT_SECRET", "SUPER_USER_PASSWORD"]
        }
      },
      "required": ["google_service_account", "ai_apis", "authentication"]
    },
    "non_sensitive_config": {
      "type": "object",
      "description": "민감하지 않은 설정 섹션",
      "properties": {
        "database": {
          "type": "object",
          "properties": {
            "DATABASE_URL": {
              "type": "string",
              "description": "데이터베이스 연결 URL"
            },
            "NEXT_PUBLIC_SUPABASE_URL": {
              "type": "string",
              "format": "uri",
              "description": "Supabase URL"
            }
          }
        },
        "google_analytics": {
          "type": "object",
          "properties": {
            "GA4_PROPERTY_ID": {
              "type": "string",
              "pattern": "^[0-9]+$",
              "description": "GA4 속성 ID"
            },
            "GSC_SITE_URL": {
              "type": "string",
              "description": "Google Search Console 사이트 URL"
            },
            "GEMINI_API_PROJECT_ID": {
              "type": "string",
              "description": "Gemini API 프로젝트 ID"
            }
          }
        },
        "user_info": {
          "type": "object",
          "properties": {
            "SUPER_USER_EMAIL": {
              "type": "string",
              "format": "email",
              "description": "관리자 이메일"
            },
            "SUPER_USER_NAME": {
              "type": "string",
              "description": "관리자 이름"
            }
          }
        },
        "optional": {
          "type": "object",
          "properties": {
            "NODE_ENV": {
              "type": "string",
              "enum": ["development", "production", "test"],
              "description": "Node.js 환경"
            },
            "PORT": {
              "type": "string",
              "pattern": "^[0-9]+$",
              "description": "포트 번호"
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "메타데이터",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "생성일"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "수정일"
        },
        "version": {
          "type": "string",
          "description": "파일 버전"
        },
        "description": {
          "type": "string",
          "description": "파일 설명"
        }
      }
    },
    "instructions": {
      "type": "object",
      "description": "사용 방법 안내 (선택사항)",
      "properties": {
        "how_to_use": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "사용 방법"
        },
        "security_notes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "보안 주의사항"
        },
        "file_structure": {
          "type": "object",
          "description": "파일 구조 설명"
        }
      }
    }
  },
  "required": ["name", "version", "secrets", "non_sensitive_config"],
  "additionalProperties": false
}